{
  "tui": {
    "theme": "system"
  },
  "$schema": "https://opencode.ai/config.json",
  "snapshot": false,
  "provider": {
    "lmstudio": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "LM Studio",
      "options": {
        "baseURL": "https://lm.freno.me/v1",
        "apiKey": "{file:~/.config/opencode/my.key}"
      },
      "models": {
        "unsloth/GLM-4.5-Air-GGUF/GLM-4.5-Air-UD-IQ2_XX": {},
        "bytedance/seed-oss-36b": {}
      }
    },
    "local": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "LM-Local",
      "options": {
        "baseURL": "http://127.0.0.1:1234/v1",
      },
      "models": {
				"qwen/qwen3-4b-thinking-2507": {}
      }
    }
  },
  "agent": {
    "buildqwen": {
      "mode": "primary",
      "model": "qwen/qwen3-coder-30",
      "temperature": 0.55,
      "description": "Qwen set a prefered temperature",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      }
    },
    "buildoss": {
      "mode": "primary",
      "model": "openai/gpt-oss-20",
      "description": "OSS set a prefered temperature",
      "temperature": 0,
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      }
    },
    "planoss": {
      "mode": "primary",
      "model": "openai/gpt-oss-20",
      "temperature": 0,
      "description": "OSS set a prefered temperature, in readonly",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false
      }
    }
  },
  "lsp": {
    "lua": {
      "command": [
        "lua-language-server"
      ],
      "extensions": [
        ".lua"
      ]
    }
  },
  "formatter": {
    "stylua": {
      "command": [
        "stylua",
        "--check",
        "$FILE"
      ],
      "extensions": [
        ".lua"
      ]
    }
  }
}
