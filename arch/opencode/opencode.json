{
  "tui": {
    "theme": "system"
  },
  "$schema": "https://opencode.ai/config.json",
  "snapshot": false,
  "provider": {
    "lmstudio": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "LM Studio",
      "options": {
        "baseURL": "http://192.168.0.104:8084/v1",
        "timeout": 900000
      },
      "models": {
        "openai/gpt-oss-20": {},
        "qwen/qwen3-coder-30": {}
      }
    }
  },
  "lsp": {
    "lua": {
      "command": [
        "lua-language-server"
      ],
      "extensions": [
        ".lua"
      ]
    }
  },
  "formatter": {
    "stylua": {
      "command": [
        "stylua",
        "--check",
        "$FILE"
      ],
      "extensions": [
        ".lua"
      ]
    }
  }
}
