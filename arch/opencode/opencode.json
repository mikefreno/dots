{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": false,
  "provider": {
    "infill": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "on-atlas",
      "options": {
        "baseURL": "https://infill.freno.me/v1",
        "apiKey": "{file:~/.config/opencode/my.key}",
      },
      "models": {
        "unsloth/glm-4.7-flash": {"limit":{
          "context": 125000,
          "output": 100000
        }},
        "unsloth/qwen3-coder": {"limit":{
        "context": 70000,
        "output": 100000
      }}
      }
    },
    "local-mac": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "on-hermes",
      "options": {
        "baseURL": "http://localhost:1234/v1",
      },
      "models": {
        "liquid/lfm2.5-1.2b": {
          "limit":{
            "context": 128000,
            "output": 100000
          }
        },
        "qwen/qwen3-vl-8b": {
          "limit":{
            "context": 100000,
            "output": 100000
          }
        }
      }
    }
  },
  "lsp": {
    "lua": {
      "command": [
        "lua-language-server"
      ],
      "extensions": [
        ".lua"
      ]
    }
  },
  "mcp": {
    "apple-docs-mcp": {
      "type": "local",
      "command": ["npx", "@kimsungwhee/apple-docs-mcp", "--help"],
      "enabled": true,
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app"
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{file:~/.config/opencode/c7.key}"
      }
    },
    "alpha-vantage":{
      "type": "remote",
      "url": "https://mcp.alphavantage.co/mcp?apikey={file:~/.config/opencode/av.key}"
    },
    "clerk": {
      "type": "remote",
      "url": "https://cursor.com/en-US/install-mcp?name=clerk&config=eyJ1cmwiOiJodHRwczovL21jcC5jbGVyay5jb20vbWNwIn0%3D",
    }
  },
  "formatter": {
    "stylua": {
      "command": [
        "stylua",
        "--check",
        "$FILE"
      ],
      "extensions": [
        ".lua"
      ]
    }
  }
}
