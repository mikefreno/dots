{
  "$schema": "https://opencode.ai/config.json",
  "theme": "mysystem",
  "autoupdate": false,
  //"autocompact": false,
  "provider": {
    "lmstudio": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "LM Studio",
      "options": {
        "baseURL": "https://lm.freno.me/v1",
        "apiKey": "{file:~/.config/opencode/my.key}",
      },
      "models": {
        "unsloth/qwen3-coder-30b-a3b-instruct": {"limit":{
        "context": 80000,
        "output": 100000
      }},
        "unsloth/gpt-oss-20b": {"limit":{
        "context": 100000,
        "output": 100000
      }}
      }
    },
    "infill": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Llama-server (infill)",
      "options": {
        "baseURL": "https://infill.freno.me/v1",
        "apiKey": "{file:~/.config/opencode/my.key}",
      },
      "models": {
        "unsloth/qwen3-coder": {"limit":{
        "context": 100000,
        "output": 100000
      }},
      "unsloth/gpt-oss-20b": {"limit":{
        "context": 131000,
        "output": 100000
      }}
      }
    }
  },
  "lsp": {
    "lua": {
      "command": [
        "lua-language-server"
      ],
      "extensions": [
        ".lua"
      ]
    }
  },
  "mcp": {
    "apple-docs-mcp": {
      "type": "local",
      "command": ["npx", "@kimsungwhee/apple-docs-mcp", "--help"],
      "enabled": true,
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app"
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{file:~/.config/opencode/c7.key}"
      }
    }
  }
  "formatter": {
    "stylua": {
      "command": [
        "stylua",
        "--check",
        "$FILE"
      ],
      "extensions": [
        ".lua"
      ]
    }
  }
}
