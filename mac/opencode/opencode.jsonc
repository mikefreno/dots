{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": false,
  "provider": {
    "local-mac": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "on-hermes",
      "options": {
        "baseURL": "http://localhost:1234/v1",
      },
      "models": {
        "liquid/lfm2.5-1.2b": {
          "limit":{
            "context": 128000,
            "output": 100000
          }
        },
        "qwen/qwen3-vl-8b": {
          "limit":{
            "context": 100000,
            "output": 100000
          }
        }
      }
    },
    "infill": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "on-atlas",
      "options": {
        "baseURL": "https://infill.freno.me/v1",
        "apiKey": "{file:~/.config/opencode/my.key}",
      },
      "models": {
        "unsloth/qwen3-coder": {"limit":{
        "context": 90000,
        "output": 100000
      }},
      "unsloth/gpt-oss-20b": {"limit":{
        "context": 131000,
        "output": 100000
      }}
      }
    }
  },
  "lsp": {
    "lua": {
      "command": [
        "lua-language-server"
      ],
      "extensions": [
        ".lua"
      ]
    }
  },
  "mcp": {
    "apple-docs-mcp": {
      "type": "local",
      "command": ["npx", "@kimsungwhee/apple-docs-mcp", "--help"],
      "enabled": true,
    },
    "gh_grep": {
      "type": "remote",
      "url": "https://mcp.grep.app"
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{file:~/.config/opencode/c7.key}"
      }
    }
  },
  "formatter": {
    "stylua": {
      "command": [
        "stylua",
        "--check",
        "$FILE"
      ],
      "extensions": [
        ".lua"
      ]
    }
  }
}
